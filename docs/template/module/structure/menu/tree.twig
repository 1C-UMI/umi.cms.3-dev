{% if (menu) %}
    <ul class="media-list">
        {% for pageInfo in menu %}

            <li class="media">

                {% if (pullLeft) %}
                    <div class="pull-left" style="width: 64px; height: 64px;"></div>
                {% endif %}

                <div class="media-body">
                    <h4 class="media-heading"><a href="{{ pageInfo.page.getPageUrl() }}">{{ pageInfo.page.displayName }}</a></h4>

                    {% if (pageInfo.page.getTypeName() == 'static.widget') %}
                        {{ pageInfo.page.description | raw }}
                    {% endif %}

                    {{ include('tree.twig', {'menu' : pageInfo.children, 'pullLeft': true}) }}

                </div>
            </li>

        {% endfor %}
    </ul>


{% endif %}

