#!/usr/bin/env php
<?php

use umicms\CoreCompiler;

require dirname(__DIR__) .'/vendor/autoload.php';


error_reporting(-1);
ini_set('display_errors', 1);

try {
    $compiler = new CoreCompiler('./umicms.phar');
    $compiler->compile();
} catch (\Exception $e) {
    echo 'Cannot to compile UMI.CMS' . PHP_EOL;
    echo 'Error type ['.get_class($e).'] ' . $e->getMessage().' at '. $e->getFile(). ':' . $e->getLine();
    exit(1);
}