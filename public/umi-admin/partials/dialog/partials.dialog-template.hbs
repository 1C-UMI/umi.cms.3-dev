{{#if model.title}}
<div class="umi-dialog-header">{{model.title}}</div>
{{/if}}
<div class="umi-dialog-section">
    {{#if model.content}}
    <div class="umi-dialog-content">
        {{{model.content}}}
    </div>
    {{/if}}
    {{#if view.hasButtons}}
    <div class="umi-dialog-buttons">
        {{#if model.confirm}}
        <div class="button primary left"
        {{action 'confirm' target="view"}}>{{model.confirm}}</div>
        {{/if}}
        {{#if model.reject}}
        <div class="button secondary right"
        {{action 'close' target="view"}}>{{model.reject}}</div>
        {{/if}}
    </div>
    {{/if}}
</div>