<div class="form-group {{ element.attributes.name }} {{ not element.valid ? 'has-error' }}">
    <label for="{{ element.attributes.id }}"> {{ element.label }} </label>

    {% if (not element.valid) %}
        <div class="alert alert-danger">
            <ul>
                {% for message in element.errors %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <input class="form-control" {{ element.attributes | raw }}/>
</div>

