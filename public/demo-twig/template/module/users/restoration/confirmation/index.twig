<div class="blog-post">
    <h2 class="blog-post-title">{{ page.getHeader() }} </h2>
    {{ page.contents | raw }}


    {% if (errors) %}

        <div class="alert alert-danger">
            <ul>
                {% for message in errors %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% else %}

        <div class="alert alert-success">
            <p>{{ translate("A new password was sent to your email") }}.</p>
        </div>


    {% endif %}


</div>



