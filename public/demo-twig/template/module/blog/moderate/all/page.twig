{{ include('breadcrumbs.twig') }}

<div class="blog-post">
    <h1>{{ page.getHeader() }}</h1>
    <p class="blog-post-meta">
        {% if (page.publishTime) %}
        <time datetime="{{ page.publishTime.format('c') }}">
            {{ page.publishTime.format('d.m.Y | H:i') }}
        </time>
        {% endif %}

        {% if page.author.getPageUrl() %}
            {{ translate('Author') }}: <a href="{{ page.author.getPageUrl() }}">{{ page.author.displayName }}</a>
        {% else %}
            {{ translate('Author') }}: {{ page.authorGuest }}
        {% endif %}

    </p>

    {{ page.contents | raw }}

</div>
