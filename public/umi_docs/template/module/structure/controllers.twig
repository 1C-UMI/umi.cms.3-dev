<article class="col-sm-8">

    <h1>{{ page.getHeader() }}</h1>

    {% if (page.getTypeName() == 'static.controller') %}

        <p> Имя контроллера: {{ page.displayName}} </p>
        {{ page.description | raw }}
        {{ page.contents | raw }}

        {% if page.templateName %}
            <h3>Шаблон</h3>
            {{ page.templateName | raw }}
        {% endif %}

        {{ page.returnValue | raw }}
        {{ page.secondContents | raw }}
    {% else %}
        {{ page.contents | raw }}
        {{ widget('structure.menu.auto', {'depth': 10, 'branch' : page, 'template' : 'tree'})|raw }}
    {% endif %}

</article>

<aside class="col-sm-3 col-sm-offset-1">
    {{ widget('structure.menu.auto', {'branch' : 'fda552a8-846a-431d-87bf-ed719cdd884b', 'template' : 'side'})|raw }}
</aside>