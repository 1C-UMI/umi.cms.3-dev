{% if (menu) %}
    <ul class="media-list  simple">
        {% for pageInfo in menu %}

            <li class="media">

                <div class="media-body">

                    {% if (pageInfo.page.getTypeName() == 'static.widget' or pageInfo.page.getTypeName() == 'static.controller') %}
                        <h4 class="media-heading">
                            <a href="{{ pageInfo.page.getPageUrl() }}">{{ pageInfo.page.h1 }}</a>
                        </h4>
                        <small>{{ pageInfo.page.displayName | raw }}</small>
                    {% else %}
                        <h4 class="media-heading">
                            <a class="handler">
                                <svg version="1.1" width="20px" height="10px" viewBox="0 0 100 100">
                                    <path d="M69.746,53.696l-32.1,32.099c-2.042,2.042-5.352,2.042-7.393,0c-2.041-2.041-2.041-5.352,0-7.393L58.656,50L30.254,21.598
                                        c-2.041-2.042-2.041-5.352,0-7.393c2.041-2.042,5.351-2.042,7.393,0l32.1,32.099c1.02,1.021,1.53,2.358,1.53,3.696
                                        S70.766,52.676,69.746,53.696z"/>
                                </svg>
                            </a>
                            {% if(isChild) %}
                                {{ pageInfo.page.displayName }}
                            {% else %}
                                <a href="{{ pageInfo.page.getPageUrl() }}" class="big">{{ pageInfo.page.displayName }}</a>
                            {% endif %}
                        </h4>
                    {% endif %}

                    {{ include('tree.twig', {'menu' : pageInfo.children, 'isChild': true}) }}

                </div>
            </li>

        {% endfor %}
    </ul>


{% endif %}

