<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ description }}" />
    <meta name="keywords" content="{{ keywords }}" />
    <meta name="author" content="">
    <link rel="shortcut icon" href="/favicon.ico">

    <title>{{ title }}</title>
    {#TODO use base#}
    <link href="{{ assetsUrl }}styles.css" rel="stylesheet">
    <link href="{{ assetsUrl }}geshi.css" rel="stylesheet">
    <base href="{{ assetsUrl }}" />

    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
</head>

<body>

    <header>
        <div class="justify_head">
            <div class="container">
                <a href="/" class="toLeft">
                    <img src="{{ assetsUrl }}images/butterfly.png" />
                </a>
                {{ widget('structure.menu.custom', {'depth': 1, 'menuName': 'navbar-menu'})| raw }}
            </div>
        </div>
        <nav class="dropdown">
            {{ widget('structure.menu.auto', {'depth': 2})|raw }}
        </nav>
    </header>

    {{ contents|raw }}

    <footer>
        <div class="container">
            <section>
                <img src="http://summit.umi-cms.ru/templates/summit/images/umicms-logo.png" />
                {#TODO get (c) Umisoft from data #}
                <span class="small">© ООО «Юмисофт» 2007-2014</span>
            </section>
            <section>
                {{ widget('structure.menu.auto', {'template' : 'columns'})|raw }}
            </section>
        </div>
    </footer>

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-53400700-1', 'auto');
        ga('send', 'pageview');

    </script>

    <script src="{{ assetsUrl }}scripts.js"></script>
</body>
</html>