<?php
/**
 * @var array $elementInfo
 * @var \umi\form\element\IFormInput $element
 */
?>
<?php $element = $elementInfo['element']?>

<?php if ($element->getInputType() != 'hidden') : ?>
    <div class="form-group">
        <label><?= $elementInfo['label'] ?></label>

        <?php if (!$element->isValid()) : ?>
            <div class="alert alert-danger">
                <ul>
                    <?php foreach ($element->getMessages() as $message) : ?>
                        <li><?= $message ?></li>
                    <?php endforeach; ?>
                </ul>
            </div>
        <?php endif; ?>

        <input class="form-control" <?= $elementInfo['attributes'] ?> />
    </div>
<?php else : ?>
    <input <?= $elementInfo['attributes'] ?> />
<?php endif; ?>