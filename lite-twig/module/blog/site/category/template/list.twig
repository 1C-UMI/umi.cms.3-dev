{% if (list.getTotal()) %}
    <ul>
        {% for category in list %}
            <li>
                {{ widget('blog.category.view', {'category' : category, 'template' : 'shortView'}) }}
                {{ widget('blog.category.rss', {'category' : category, 'template' : 'rssLink'}) }}
            </li>
        {% endfor %}
    </ul>
{% endif %}