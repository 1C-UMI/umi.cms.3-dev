<?php
/**
 * @var \umi\form\element\IFormInput $input
 */
$attributes = array_merge(
    $input->getAttributes(),
    [
        'type' => $input->getInputType(),
        'name' => $input->getElementName(),
        'value' => $input->getValue()
    ]
);

echo '<label>' . (($input->getInputType() != 'hidden') ? $input->getName() : '') . '<input ' . buildAttributes($attributes) .' /></label>';