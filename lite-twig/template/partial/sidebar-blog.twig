{{ include('partial/authorization.twig') }}

<div class="sidebar-module sidebar-module-inset">
    <h4>{{ translate('RSSFeed') }}</h4>
    <p>{{ translate('Blogs') }}: {{ widget('blog.post.rssLink', {'template' : 'rssLink'}) }}</p>
</div>
<div class="sidebar-module">
    <h4>{{ translate('Categories') }}</h4>
    {{ widget('blog.category.list', {'template' : 'listShort'}) }}
</div>
<div class="sidebar-module">
    <h4>{{ translate('Tags cloud') }}</h4>
    {{ widget('blog.tag.cloud', {'template' : 'cloud'}) }}
</div>
<div class="sidebar-module">
    <h4>{{ translate('Authors') }}</h4>
    {{ widget('blog.author.list', {'template' : 'listShort'}) }}
</div>
{% if (
    isAllowedResource('blog.draft', 'widget:ownListLink') and
    isAllowedResource('blog.moderate', 'widget:ownListLink') and
    isAllowedResource('blog.reject', 'widget:listLink')
) %}
<div class="sidebar-module">
    <h4>{{ translate('Authors\'s posts') }}</h4>
    <ol class="list-unstyled">
        <li>{{ translate('Drafts') }}: {{ widget('blog.draft.ownListLink', {'template' : 'draftLinkAuthor'}) }}</li>
        <li>{{ translate('Post on moderation') }}: {{ widget('blog.moderate.ownListLink', {'template' : 'moderateLink'}) }}</li>
        <li>{{ translate('Rejected posts') }}: {{ widget('blog.reject.listLink', {'template' : 'listLink'}) }}</li>
    </ol>
</div>
{% endif %}
{% if (isAllowedResource('blog.moderate', 'widget:allListLink')) %}
<div class="sidebar-module">
    <h4>{{ translate('Moderate') }}</h4>
    <ol class="list-unstyled">
        <li>{{ translate('Post on moderation') }}: {{ widget('blog.moderate.allListLink', {'template' : 'moderateLink'}) }}</li>
    </ol>
</div>
{% endif %}
