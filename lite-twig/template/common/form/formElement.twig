{% if (constant('TYPE_NAME', element) == 'hidden') %}
    hidden
{% elseif (constant('TYPE_NAME', element) == 'textarea') %}
    {{ include('form/element/textarea.twig', {'textarea' : element}) }}
{% endif %}

switch(true)
{
    case $element instanceof Textarea: {
        echo $this->render('form/element/textarea.phtml', ['textarea' => $element]);
        break;
    }
    case $element instanceof Select: {
        echo $this->render('form/element/select.phtml', ['select' => $element]);
        break;
    }
    case $element instanceof CheckboxGroup: {
        echo $this->render('form/element/checkboxGroup.phtml', ['checkboxGroup' => $element]);
        break;
    }
    case $element instanceof Checkbox: {
        echo $this->render('form/element/checkbox.phtml', ['checkbox' => $element]);
        break;
    }
    case $element instanceof IFormButton: {
        echo $this->render('form/element/button.phtml', ['button' => $element]);
        break;
    }
    case $element instanceof IFormInput: {
        echo $this->render('form/element/input.phtml', ['input' => $element]);
        break;
    }
    default:
        throw new InvalidArgumentException(
            sprintf('Cannot build element "%s". Element type is unknown.', $element->getName())
        );
}