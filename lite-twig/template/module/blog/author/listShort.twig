{% if (authors.getTotal()) %}
    <ol class="list-unstyled">
        {% for blogAuthor in authors %}
            <li>
                {{ widget('blog.author.view', {'blogAuthor' : blogAuthor, 'template' : 'listShortView'}) }}
                {{ widget('blog.author.rss', {'blogAuthor' : blogAuthor, 'template' : 'rssLink'}) }}
            </li>
        {% endfor %}
    </ol>
{% endif %}