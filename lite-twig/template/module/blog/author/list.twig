{% if (authors.getTotal()) %}
    <ul>
        {% for blogAuthor in authors %}
            <li>
                {{ widget('blog.author.view', {'blogAuthor' : blogAuthor, 'template' : 'shortView'}) }}
                {{ widget('blog.author.rss', {'blogAuthor' : blogAuthor, 'template' : 'rssLink'}) }}
            </li>
        {% endfor %}
    </ul>
{% endif %}