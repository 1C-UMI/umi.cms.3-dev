{% if (comments.getTotal()) %}
    {% for blogComment in comments %}
        {{ widget('blog.comment.view', {'blogComment' : blogComment, 'template' : 'view'}) }}
        {{ widget('blog.comment.add', {'blogPost' : blogComment.post, 'blogComment' : blogComment, 'template' : 'addComment'}) }}
    {% endfor %}
{% endif %}