<div class="media-body">
    {% if (blogComment.publishStatus == constant('COMMENT_STATUS_PUBLISHED', blogComment)) %}
        <h1>{{ blogComment.displayName }}</h1>
        <time datetime="{{ blogComment.publishTime.format('c') }}">
            {{ blogComment.publishTime.format('d.m.Y | H:i') }}
        </time>
        {{ blogComment.contents | raw }}

        {% if (blogComment.publishStatus == constant('COMMENT_STATUS_NEED_MODERATE', blogComment)) %}
            <div class="btn-toolbar">
                {{ widget('blog.comment.publish', {'blogComment' : blogComment, 'template' : 'publishForm'}) }}
                {{ widget('blog.comment.reject', {'blogComment' : blogComment, 'template' : 'rejectForm'}) }}
            </div>
        {% endif %}

        {% if (blogComment.publishStatus == constant('COMMENT_STATUS_PUBLISHED', blogComment)) %}
            <div class="btn-toolbar">
                {{ widget('blog.comment.unpublish', {'blogComment' : blogComment, 'template' : 'unpublishForm'}) }}
            </div>
        {% endif %}

    {% else %}
        {{ translate('Post has been unpublish.') }}
    {% endif %}
</div>