<div class="media-body">
    <h1>{{ blogComment.displayName }}</h1>
    <time datetime="{{ blogComment.publishTime.format('c') }}">
        {{ blogComment.publishTime.format('d.m.Y | H:i') }}
    </time>
    {{ blogComment.contents | raw }}
    {{ widget('blog.comment.publish', {'blogComment' : blogComment, 'template' : 'publishForm'}) }}
    {{ widget('blog.comment.reject', {'blogComment' : blogComment, 'template' : 'rejectForm'}) }}
</div>