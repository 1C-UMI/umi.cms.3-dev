<div class="blog-post">
    <h2 class="blog-post-title">{{ page.displayName }}</h2>
    <p class="blog-post-meta">
        <time datetime="{{ page.date.format('c') }}">
            {{ page.date.format('d.m.Y | H:i') }}
        </time>
        {{ widget('news.subject.list', {'template' :'listInline'}) }}
    </p>
    {{ page.contents | raw }}
</div>