<!DOCTYPE html>
<html lang="en">
<head>
    {{ include('partial/head.twig') }}
</head>

<body>

<div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">

        <div class="navbar-collapse collapse">
            {{ widget('structure.menu.auto', {'depth': 1})|raw }}

            {% if (locales) %}
                <ul class="nav navbar-nav navbar-right">
                    {% for localeId,localeInfo in locales %}
                        <li class="{{ localeInfo.current ? 'active' }}">
                            <a href="{{ localeInfo.url }}">{{ translate(localeInfo.id) }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

        </div>

    </div>
</div>

<div class="container">

    <header class="blog-header">
        {{ widget('structure.infoblock.view', {'template' : 'logo', 'infoBlock' : 'commonInfoBlock'}) }}
    </header>

    <main class="row">

        <article class="col-sm-8 blog-main">

            {{ contents|raw }}

        </article>

        <aside class="col-sm-3 col-sm-offset-1 blog-sidebar">
            {{ include('partial/sidebar-blog.twig') }}
        </aside>

    </main>

</div>

<footer class="blog-footer">
    {{ widget('structure.menu.custom', {'menuName' : 'bottomMenu'}) }}

    {{ widget('structure.infoblock.view', {'template' : 'footer', 'infoBlock' : 'commonInfoBlock'}) }}
    <p>
        <a href="#">{{ translate('Back to top') }}</a>
    </p>
</footer>


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script src="/bootstrap/js/docs.min.js"></script>
</body>
</html>