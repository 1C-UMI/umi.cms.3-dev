{
    "name": "umisoft/umi.cms.3-dev",
    "description": "UMI.CMS 3 Development Package",
    "type": "library",
    "license": "proprietary",
    "homepage": "http://umi-cms.ru/",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "umicms\\": "umicms/library",
            "umicms\\project\\" : "umicms/project",
            "project\\" : ""
        },
        "classmap": ["umicms/project/module/files/admin/manager/elfinder"]
    },
    "replace": {
        "umi/cms" : "self.version"
    },
    "require": {
        "php": ">=5.4.0",
        "umisoft/umi.framework-dev": "*",
        "guzzlehttp/guzzle": "4.*",
        "twig/twig": "1.*",
        "gregwar/captcha": "dev-master"
    },
    "require-dev":{
        "mockery/mockery": "0.9.*"
    },
    "repositories":[
        {
            "type": "git",
            "url": "git@github.com:Umisoft/umi.framework-dev.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "cd ./installer/public/resources",
            "bower install"
        ],
        "post-update-cmd": [
            "cd ./installer/public/resources",
            "bower update"
        ]
    }

}
