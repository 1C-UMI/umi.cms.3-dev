{{#each content itemController="formToolbarItem"}}

    {{#if isApply}}
        <li>
            {{#view "saveButton" class="button s-margin-clear wide left" model=parentController.parentController.model.object}}
                {{displayName}}
            {{/view}}
        </li>
    {{/if}}

    {{#if isSwitchActivity}}
        <li>
            <span class="button white square" {{action 'switchActivity' parentController.parentController.model.object}}>
                {{#if parentController.parentController.model.object.active}}
                    <i class="icon icon-pause"></i>
                {{else}}
                    <i class="icon icon-pause white"></i>
                {{/if}}
            </span>
        </li>
    {{/if}}

    {{#if isBackups}}
        {{#view "formControlDropUp" tagName="li"}}
            <span class="button white square" {{action "open" target="view"}}>
                <i class="icon icon-6"></i>
            </span>
            <div class="f-dropdown umi-dropup dropdown-rows">
                <div class="row collapse">
                    <div class="columns small-12">
                        <strong>{{displayName}}</strong>
                    </div>
                </div>
                <div class="s-scroll-wrap">
                    <div>
                        {{#each parentController.backupList}}
                            <div class="row collapse" {{action 'applyBackup' this}}>
                                <div class="columns small-6 place-button">
                                    {{#if isActive}}
                                        <button class="button flat tiny square">
                                            <i class="icon icon-accept"></i>
                                        </button>
                                    {{else}}
                                        <button class="button flat tiny square">
                                            <i class="icon icon-renew"></i>
                                        </button>
                                    {{/if}}
                                    {{date.date}}
                                </div>
                                <div class="columns small-6">
                                    {{#if user}}
                                        {{user}}
                                    {{else}}
                                        Имя пользователя
                                    {{/if}}
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/view}}
    {{/if}}

    {{#if isTrash}}
        <li>
            <span class="button white square" {{action "trash" parentController.parentController.model.object "form"}}>
                <i class="icon icon-delete"></i>
            </span>
        </li>
    {{/if}}
{{/each}}