{{#if view.tumb}}
    <div class="umi-element-left umi-element-left-image">
        <img {{bind-attr src=view.tumb}} class="umi-element-image-icon" />
        <div class="umi-element-image-preview">
            <img {{bind-attr src=view.tumb}} />
        </div>
    </div>
{{/if}}

<div class="umi-element-center umi-element-center-image">
    {{view "textElement" object=view.object meta=view.meta}}
</div>

<div class="umi-element-right umi-element-right-image">
    <i class="icon icon-delete" {{action "clearValue" target="view"}}></i>
    <i class="icon icon-image" {{action "showPopup" "fileManager" view.object view.meta}}></i>
</div>