<div class="umi-table-control-header s-unselectable">

    <div class="umi-table-control-header-fixed-left">
        <div class="umi-table-control-cell">
            <input type="checkbox" id="checkbox-id" class="s-margin-clear"/>
            <label for="checkbox-id"></label>
        </div>
        <div class="umi-table-contol-cell-empty bg-gray"></div>
    </div>

    <div class="umi-table-control-header-center">
        <table class="umi-table-control-header">
            <tbody>
                <tr class="umi-table-row">
                    {{#each column in content.viewSettings.columns}}
                        <td class="umi-table-header-column">
                            <div class="umi-table-control-cell column-id-{{unbound column.name}}">
                                {{column.title}}
                            </div>
                            <div class="umi-table-column-resizer"></div>
                        </td>
                    {{/each}}
                    <td class="umi-table-empty-column"></td>
                </tr>

                <tr class="umi-table-row filters">
                    {{#each column in content.viewSettings.columns}}
                        <td class="umi-table-header-column">
                            <div class="umi-table-control-cell filter column-id-{{unbound column.name}}">
                                <input type="text"/>
                                <div class="button flat tiny square right" {{action 'sortByProperty' column.name}}>
                                    <i class="icon black icon-bottom-thin"></i>
                                </div>
                            </div>
                        </td>
                    {{/each}}
                    <td class="umi-table-empty-column"></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="umi-table-control-header-fixed-right">
        <div class="umi-table-control-cell">
            <span class="button tiny flat">
                <i class="icon icon-settings"></i>
            </span>
        </div>
        <div class="umi-table-contol-cell-empty bg-gray"></div>
    </div>
</div>

<div class="table-content-wrapper">
    <div class="s-scroll-wrap">
        <table class="table-content">
            <tbody>
                {{!#if objects.content.isFulfilled}}
                    {{#each object in objects}}
                        {{#link-to 'context' 'form' object.id class="umi-table-content-row" tagName="tr"}}
                            {{#each column in content.viewSettings.columns}}
                                <td class="umi-table-cell">
                                    {{view "tableCellContent" objectBinding="object" column=column}}
                                </td>
                            {{/each}}
                            <td class="umi-table-empty-column"></td>
                        {{/link-to}}
                    {{else}}
                        <tr class="umi-table-control-content-row-empty">
                            <td></td> <!-- Без этой ячейки не получается сделать на полную ширину -->
                            <td class="umi-table-control-content-cell-empty">
                                <div class="umi-table-control-content-div-empty">
                                    <span>Нет данных</span>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                {{!/if}}
            </tbody>
        </table>

        <!-- Отдельно добавим чекбоксы-->
        <div class="umi-table-control-content-fixed-left">
            {{#each object in objects}}
            <div class="umi-table-control-cell">
                <input type="checkbox" id="checkbox-id" class="s-margin-clear"/>
                <label for="checkbox-id"></label>
            </div>
            {{/each}}
        </div>

        <!-- отдельно добавим пустую колонку справа-->
        <div class="umi-table-control-content-fixed-right">
            {{#each object in objects}}
            <div class="umi-table-contol-cell-empty"></div>
            {{/each}}
        </div>
    </div>
</div>

<!-- Футер-->
<div class="umi-table-control-footer">
    <div class="right umi-table-control-pagination">
        <span class="pagination-label">Пагинация:</span>
        <input type="text" class="s-margin-clear umi-pagination" {{bind-attr value=offset}} />
    </div>
    <div class="right umi-table-control-pagination">
        <span class="pagination-label">Строк на странице:</span>
        <input type="text" class="s-margin-clear umi-limit" {{bind-attr value=limit}} />
    </div>
</div>