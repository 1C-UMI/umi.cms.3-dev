{{#if view.meta.attributes.hasIcon}}
    <i {{bind-attr class=":icon view.defaultBehaviourIcon"}}></i>
{{/if}}

{{#if view.defaultBehaviour.attributes.label}}
    <b class="button-label">{{view.defaultBehaviour.attributes.label}}</b>
{{/if}}

<span class="dropdown-toggler" {{action 'open' target="view" on="mouseDown"}}></span>

<ul class="f-dropdown">
    {{#each view.meta.behaviour.choices}}
        {{#view view.itemView}}
            <i {{bind-attr class=":icon :icon-accept view.isDefaultBehaviour::white"}} {{action 'toggleDefaultBehaviour' view._parentView.contentIndex target="view.parentView" on="mouseUp"}}></i>
            <a {{action 'sendActionForBehaviour' behaviour target="view.parentView" on="mouseUp"}}>
                {{attributes.label}}
            </a>
        {{/view}}
    {{/each}}
</ul>
