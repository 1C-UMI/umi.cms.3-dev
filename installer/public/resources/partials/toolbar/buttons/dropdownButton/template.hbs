{{#if view.meta.attributes.icon}}
    <i class="{{unbound view.meta.attributes.icon.class}}"></i>
{{/if}}

{{#if view.meta.attributes.label}}
    {{unbound view.meta.attributes.label}}
{{/if}}

<ul class="f-dropdown">
    {{#each view.meta.choices}}
        <span {{action 'sendActionForBehaviour' behaviour target="view"}}>
            {{attributes.label}}
        </span>
    {{/each}}
</ul>
