<div class="panel pretty radius shake-it">
    <form name="auth" novalidate="novalidate" class="custom large umi-validator" method="post" action="{{form.attributes.action}}">
        <div class="errors-list"></div>
        {{#each form.elements}}
            <div class="row">
                <div class="small-12 columns">
                    {{#ifCond type 'select'}}
                        <select name="{{name}}" placeholder="{{label}}" >
                            {{#each choices}}
                                <option value="{{attributes.value}}">{{label}}</option>
                            {{/each}}
                        </select>
                    {{else}}
                        <i class="icon icon-{{name}} input-icon"></i>
                        <input name="{{name}}" placeholder="{{label}}" type="{{type}}" required="required" autocomplete="off" value="">
                        <span class="error">Поле не заполнено</span>
                    {{/ifCond}}
                </div>
            </div>
        {{/each}}
        <div class="row">
            <div class="small-7 columns">
                <label class="left" for="rememberMe">
                    <input name="rememberMe" id="rememberMe" type="checkbox" value="1">
                    Запомнить меня
                </label>
            </div>
            <div class="small-5 columns">
                <input name="submit" class="button radius expand s-margin-clear" type="submit" value="Войти">
                <span class="loader"></span>
            </div>
        </div>
    </form>
</div>
<div class="text-center">
    <a href="lostPassword" class="button flat" data-handler="forgetPass">Забыли пароль?</a>
</div>
