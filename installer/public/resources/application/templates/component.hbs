<div class="s-full-height">
    <div {{bind-attr class=":off-canvas-wrap :s-full-height sideBarControl:move-right"}}>
        <div class="umi-divider-wrapper s-full-height">
            {{#if sideBarControl}}
                <div class="umi-divider-left">
                    <div class="umi-divider-left-content">
                        {{outlet 'sideBar'}}
                    </div>

                    <div class="umi-divider"></div>
                </div>
            {{/if}}

            <div class="umi-left-bottom-panel s-unselectable">
                {{#if sideBarControl}}
                    <a href="javascript:void(0)" class="umi-button-icon-32 umi-light-bg umi-divider-left-toggle" {{action 'pause' target='pause'}}>
                        <i class="icon icon-list"></i>
                    </a>
                {{else}}
                    <a href="javascript:void(0)" class="umi-button-icon-32 umi-light-bg umi-disabled">
                        <i class="icon icon-list"></i>
                    </a>
                {{/if}}

                <a href="javascript:void(0)" class="umi-button-icon-32 umi-light-bg" style="position: relative;">
                    <i class="icon icon-eye"></i>
                    <span style="position:absolute; float:left; background: #FFFFFF; left: 0; bottom: 32px;">
                        {{#view view.filtersView}}
                            {{#each filters}}
                                <a href="javascript:void(0)">{{displayName}}</a>
                            {{/each}}
                        {{/view}}
                    </span>
                </a>
            </div>

            <div class="umi-divider-right">
                <div class="s-unselectable umi-mode">
                    {{view 'toolBar'}}
                    <h5 style="float: left; margin-top: 2px;">{{displayName}}</h5>
                </div>

                <div class="umi-component columns small-12 s-padding-clear">
                    {{outlet}}
                </div>
            </div>
        </div>
    </div>
</div>