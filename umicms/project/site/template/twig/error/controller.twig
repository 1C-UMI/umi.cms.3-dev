<div>
    <h1>An error occurred</h1>

    <h2>{{ error.getMessage() }}</h2>

    <hr/>
    <h3>Additional information:</h3>

    <dl>
        <dt>File:</dt>
        <dd>
            {{ error.getFile() }}:{{ error.getLine() }}
        </dd>
        <dt>Message:</dt>
        <dd>
            {{ error.getMessage() }}
        </dd>
        <dt>Stack trace:</dt>
        <dd>
            <pre>{{ error.getTraceAsString() }}</pre>
        </dd>
    </dl>

    {% for error in stack %}
        <hr/>
        <h3>Previous exceptions:</h3>
        <ul>
            <li>
                <dl>
                    <dt>File:</dt>
                    <dd>
                        {{ error.getFile() }}:{{ error.getLine() }}
                    </dd>
                    <dt>Message:</dt>
                    <dd>
                        {{ error.getMessage() }}
                    </dd>
                    <dt>Stack trace:</dt>
                    <dd>
                        <pre>{{ error.getTraceAsString() }}</pre>
                    </dd>
                </dl>
            </li>
        </ul>
    {% endfor %}

</div>